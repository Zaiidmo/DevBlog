  <section
    class="bg-gray-900 w-screen h-screen flex flex-col items-center justify-center text-center"
  >
    <div
      class="grid max-w-screen-xl px-4 pt-12 mx-auto lg:gap-8 xl:gap-0 lg:py-16 lg:grid-cols-12"
    >
      <div class="hidden lg:mt-0 lg:col-span-5 lg:flex">
        <img src="/images/articles-hero.png" alt="technologies-hero-section" />
      </div>
      <div class="mr-auto place-self-center lg:col-span-7">
        <h1
          class="max-w-2xl mb-4 text-4xl font-extrabold tracking-tight leading-none md:text-5xl xl:text-6xl dark:text-white"
        >
          Discover our Bytes of Wisdom.
        </h1>
        <p
          class="max-w-2xl mb-6 font-light text-justify lg:mb-8 md:text-lg lg:text-xl text-gray-400"
        >
          Dive deep into our carefully curated collection of articles, where
          technology meets creativity. From insightful tutorials and innovative
          coding practices to the latest trends and breakthroughs in the world of
          development, our content is crafted to inspire, educate, and empower.
          Whether you're a seasoned developer or just starting your tech journey,
          you'll find valuable insights and practical tips to elevate your skills.
          Explore our bytes of wisdom and stay ahead in the ever-evolving
          landscape of digital innovation.
        </p>
        <form class="max-w-md mx-auto">
          <label
            for="default-search"
            class="mb-2 text-sm font-medium text-gray-900 sr-only dark:text-white"
            >Search</label
          >
          <div class="relative z-10">
            <div
              class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none"
            >
              <svg
                class="w-4 h-4 text-gray-500 dark:text-gray-400"
                aria-hidden="true"
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 20 20"
              >
                <path
                  stroke="currentColor"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"
                />
              </svg>
            </div>
            <input
              type="search"
              id="default-search"
              class="block w-full p-4 ps-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
              placeholder="Loocking for something special ?"
              required
            />
            <button
              type="submit"
              class="text-black absolute end-2.5 bottom-2.5 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-4 py-2 dark:bg-yellow-400 hover:bg-yellow-700 hover:text-white"
            >
              Search
            </button>
          </div>
        </form>
      </div>
    </div>
  </section>

  <section class="py-10 bg-gray-700">
    <% if (articles.length > 0) { %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 max-w-screen-xl mx-auto gap-8">
      <!-- Grid Items -->
      <% articles.forEach(article => { %>
        <div class="max-w-sm border rounded-lg shadow bg-gray-800 border-gray-700">
          <a href="/articles/<%= article.id %>">
            <img class="rounded-t-lg" src="<%= article.poster %>" alt="" />
          </a>
          <div class="p-5">
            <a href="/articles/<%= article.id %>">
              <h5 class="mb-2 text-2xl font-bold font-bruno tracking-tight text-white">
                <%= article.title %>
              </h5>
            </a>
            <p class="mb-3 font-normal text-gray-400 text-ellipsis overflow-hidden whitespace-nowrap w-full">
              <%= article.description %>
            </p>
            <a href="/articles/<%= article.id %>" class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-black bg-yellow-400 rounded-lg hover:bg-yellow-800 ">
              Read more
              <svg class="rtl:rotate-180 w-3.5 h-3.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
              </svg>
            </a>
          </div>
        </div>
      <% }); %>
    </div>
  
    <!-- Pagination Controls -->
    <div class="mt-6 flex justify-center">
      <!-- Previous Page -->
      <% if (currentPage > 1) { %>
        <a href="?page=<%= currentPage - 1 %>" class="px-3 py-2 mx-1 text-sm font-medium text-black bg-gray-500 rounded-lg hover:bg-yellow-600">Previous</a>
      <% } %>
  
      <!-- Page Numbers -->
      <% for (let i = 1; i <= totalPages; i++) { %>
        <a href="?page=<%= i %>" class="px-3 py-2 mx-1 text-sm font-medium text-black bg-gray-500 rounded-lg <%= i === currentPage ? 'bg-yellow-400' : 'hover:bg-gray-600' %>">
          <%= i %>
        </a>
      <% } %>
  
      <!-- Next Page -->
      <% if (currentPage < totalPages) { %>
        <a href="?page=<%= currentPage + 1 %>" class="px-3 py-2 mx-1 text-sm font-medium text-black bg-gray-500 rounded-lg hover:bg-yellow-600">Next</a>
      <% } %>
    </div>
  
    <% } else { %>
    <div class="text-center">
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white">No articles found</h2>
    </div>
    <% } %>
  </section>
  