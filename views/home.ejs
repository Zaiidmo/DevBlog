<section
  class="bg-gray-900 w-screen h-screen flex flex-col items-center justify-center text-center"
>
  <div
    class="grid max-w-screen-xl px-4 pt-12 mx-auto lg:gap-8 xl:gap-0 lg:py-16 lg:grid-cols-12"
  >
    <div class="hidden lg:mt-0 lg:col-span-5 lg:flex">
      <img src="/images/logo.png" alt="technologies-hero-section" />
    </div>
    <div class="mr-auto place-self-center lg:col-span-7">
      <h1
        class="max-w-2xl mb-4 text-4xl font-extrabold font-bruno tracking-tight leading-none md:text-5xl xl:text-6xl dark:text-white"
      >
      Welcome to DevBlog!
      </h1>
      <p
        class="max-w-2xl mb-6 font-light text-justify lg:mb-8 md:text-lg lg:text-xl text-gray-400"
      >
      Dive into a realm of inspiration and insight! DevBlog is your gateway to a treasure trove of articles designed to enlighten and empower. Join our vibrant community and embark on a journey of discoveryâ€”where every read sparks new ideas and perspectives. Let your exploration begin!
      </p>
      <a href="/articles">
        <button
          class="text-black bg-yellow-400 hover:bg-transparent hover:border border-yellow-400 hover:text-white font-medium rounded-xl w-full text-sm px-4 lg:px-5 py-2 lg:py-2.5 mr-2"
        >
          Discover Articles
        </button>
      </a>
    </div>
  </div>
</section>

<section class="bg-gray-800 w-screen ">
    <div class="max-w-screen-xl mx-auto flex flex-col items-center justify-center gap-8 py-16">
        <h1
            class="max-w-2xl mb-4 text-3xl font-extrabold font-bruno tracking-tight leading-none md:text-4xl text-white"
          >
            Latest Articles
          </h1>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% latestArticles.forEach((article) => { %>
              <div class="bg-gray-900 rounded-lg shadow-lg">
                <img src="<%= article.poster %>" alt="<%= article.title %>" class="rounded-t-lg w-full h-48 object-cover" />
                <div class="p-4">
                  <h2 class="text-xl font-bold text-white"><%= article.title %></h2>
                  <p class="text-gray-400 mt-2"><%= article.description %></p>
                  <a href="/articles/<%= article.id %>" class="text-yellow-400 hover:text-yellow-300 mt-4 block">Read More</a>
                </div>
              </div>
            <% }) %>
          </div>
    </div>

</section>
