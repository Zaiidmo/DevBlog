<section class="bg-gray-800 w-screen">
    <h2 class="text-3xl font-bold text-center text-white py-10">Search Results</h2>
    <% if (error) { %>
        <p class="text-red-900"><%= error %></p>
      <% } else if (articles && articles.length > 0 ) { %>
        <ul>
          <% articles.forEach(article => { %>
            <li>
              <h3><%= article.title %></h3>
              <p><%= article.description %></p>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <p>No articles found.</p>
      <% } %>
    
      <a href="/">Back to Home</a>
</section>